{# The Category Archive Page Template #}

{% extends "archive.twig" %}

{% block heading %}
  <div class="archive-heading-title">
    <div class="sm:inline-flex sm:items-center w-full sm:w-auto bg-white rounded-lg p-6 text-base normal-case inline-block mx-auto shadow-md font-normal"
    >
      <img src="{{ author.avatar }}" alt="Author Image" class="h-16 w-16 sm:h-24 sm:w-24 rounded-full mx-auto sm:mx-0 sm:mr-6">
      <div class="text-center sm:text-left mt-2 sm:mt-0">
        <h2 class="text-lg">{{ author.name }}</h2>
        <div class="text-purple-500">{{ author.meta('nucssa_occupation') }}</div>
        <div class="text-gray-600"><a href="mailto:'{{ author.name }}'<{{ author.user_email }}>">{{ author.user_email }}</a></div>
        <div class="text-gray-600"><a href="{{ author.user_url }}">{{ author.user_url }}</a></div>
        <div class="text-gray-600">{{ author.description }}</div>
      </div>
    </div>
  </div>
{% endblock %}