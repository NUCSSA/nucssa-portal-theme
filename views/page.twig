{% extends "base.twig" %}

{% block content %}
	<main class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
      {# thumbnail #}
      <div class="post-thumbnail">
        <div class="post-thumbnail-bg-layer" style="background-image: url('{{ post.thumbnail.src|resize(1200, 300, "center") }}')"></div>
        <img class="post-thumbnail-image" src="{{ post.thumbnail.src|resize(1200, 300, "center") }}"/>
      </div>
      {# title #}
      <h1 class="post-title">{{ post.title|striptags|raw }}</h1>

      {# excerpt #}
      {% if function('has_excerpt') %}
        <div class="post-excerpt">
          {{ post.preview.read_more(null)|wpautop|raw }}
        </div>
      {% endif %}

      {# meta #}
      <div class="post-meta">
        {# edit link #}
        {% if user %}<a href="{{ post.edit_link|raw }}">{{ _e('Edit') }}</a>{% endif %}
      </div>

      {# content #}
      <div class="post-content">
        {{post.content|raw}}
      </div>

      {# tags #}
      <div class="post-tags">
        <ul>
        {% for tag in post.tags %}
          <li><a href="{{ tag.link }}">{{ tag }}</a></li>
        {% endfor %}
        </ul>
      </div>

      {# share buttons #}
      {# TODO #}

    </article>

  </main><!-- /content-wrapper -->
{% endblock %}
